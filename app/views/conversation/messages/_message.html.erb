<div class="list-group-item message" id="<%= dom_id(message) %>">
  <%= link_to raw("&times;"), conversation_message_subscription_path(message.subscription_of(current_user)), class: "pull-right delete", remote: true, method: :delete, data: {confirm: "Are you sure you want to delete the message?"} %>
  <h4 class="list-group-item-heading"><%= message.author.email %></h4>
  <p class="list-group-item-text"><%= message.content %></p>
</div>
